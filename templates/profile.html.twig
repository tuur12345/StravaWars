{% extends 'base.html.twig' %}

{% block body %}
    <link href="{{ asset('css/profile.css') }}" rel="stylesheet">
    <div class="profile-container">
        <div class="profile-header">
            <img src="{{ user.profile_medium }}" alt="Profile Picture" class="profile-image">
            <div class="profile-info">
                <h1>{{ user.firstname }} {{ user.lastname }}</h1>
                <p><strong>Username:</strong> {{ user.username }}</p>
                <p><strong>Location:</strong> {{ user.city }}, {{ user.state }}, {{ user.country }}</p>
                <p><strong>Sex:</strong> {{ user.sex == 'M' ? 'Male' : 'Female' }}</p>
                <p><strong>Premium:</strong> {{ user.premium ? 'Yes' : 'No' }}</p>
            </div>
        </div>

        <div class="profile-stats">
            <h2>Profile Stats</h2>
            <p><strong>Follower Count:</strong> {{ user.follower }}</p>
            <p><strong>Friend Count:</strong> {{ user.friend }}</p>
        </div>
    </div>
{% endblock %}
