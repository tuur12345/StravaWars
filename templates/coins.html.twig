<script>
    const menu = document.querySelector('.shop-menu');
    const menuButtons = menu.querySelectorAll('.menu-button');
    const shopContent = document.getElementById('shopContent');

    // Demo content voor de andere tabs
    const inventoryContent = `
  <h2>Inventaris</h2>
  <p>Hier zie je een overzicht van je verzamelde items en bezittingen.</p>
  <ul>
    <li>Item 1</li>
    <li>Item 2</li>
    <li>Nog een item</li>
  </ul>
`;

    const eventsContent = `
  <h2>Evenementen</h2>
  <p>Bekijk de huidige en aankomende speciale evenementen!</p>
  <ul>
    <li>Lente-evenement (loopt tot 30 april)</li>
    <li>Bonus XP weekend (26-27 april)</li>
  </ul>
`;

    menuButtons.forEach(button => {
        button.addEventListener('click', function() {
            // Verwijder de 'active' klasse van alle knoppen
            menuButtons.forEach(btn => {
                btn.classList.remove('active');
            });
            // Voeg de 'active' klasse toe aan de geklikte knop
            this.classList.add('active');

            // Haal het 'data-tab' attribuut op om te bepalen welke inhoud getoond moet worden
            const tab = this.dataset.tab;

            // Update de inhoud van het shopContent element
            if (tab === 'shop') {
                shopContent.innerHTML = `
        <div class="hexagon-container">
          <img src="path/to/hexagon1.png" alt="Hexagon 1">
          <div class="price">
            <img src="path/to/coin_icon.png" alt="Coin Icon">
            <span>15</span>
          </div>
        </div>
        <div class="hexagon-container">
          <img src="path/to/hexagon2.png" alt="Hexagon 2">
          <div class="price">
            <img src="path/to/coin_icon.png" alt="Coin Icon">
            <span>15</span>
          </div>
        </div>
        <div class="hexagon-container">
          <img src="path/to/hexagon3.png" alt="Hexagon 3">
          <div class="price">
            <img src="path/to/coin_icon.png" alt="Coin Icon">
            <span>15</span>
          </div>
        </div>
      `;
            } else if (tab === 'inventory') {
                shopContent.innerHTML = inventoryContent;
            } else if (tab === 'events') {
                shopContent.innerHTML = eventsContent;
            }
        });
    });
    const coinoverlay = document.getElementById('coinsoverlay');
    const coinpopup = document.getElementById('coinspopup');

    coinoverlay.addEventListener('click', function (e) {
        if (!coinpopup.contains(e.target)) {
            CoinclosePopup();
        }
    });

    function CoinPopup() {
        document.getElementById('coinsoverlay').style.display = 'block';
        document.getElementById('coinspopup').style.display = 'block';
    }
    function CoinclosePopup() {
        document.getElementById('coinsoverlay').style.display = 'none';
        document.getElementById('coinspopup').style.display = 'none';

    }

</script>


